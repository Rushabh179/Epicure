<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.rushabh.epicure.activity.ItemActivity"
    tools:openDrawer="end">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/vpItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="@dimen/tab_indicator_height"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tabCategory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabCategory" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="@string/cart_detail"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_orange_light"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                app:layout_constraintBottom_toTopOf="@+id/rvOrder"
                app:layout_constraintEnd_toStartOf="@+id/txtClearAll"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/txtClearAll"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/clear_all"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:background="@android:color/holo_orange_dark"
                app:layout_constraintBottom_toBottomOf="@+id/txtHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtHeader"
                app:layout_constraintTop_toTopOf="@+id/txtHeader" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOrder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toTopOf="@+id/btnCompleteOrder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtHeader"
                app:layout_constraintTop_toBottomOf="@+id/txtHeader" />

            <Button
                android:id="@+id/btnCompleteOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtTotal"
                android:fontFamily="cursive"
                android:text="@string/complete_order"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtTotal"
                app:layout_constraintTop_toBottomOf="@+id/rvOrder" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:padding="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/btnCompleteOrder"
                app:layout_constraintEnd_toStartOf="@+id/btnCompleteOrder"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnCompleteOrder"
                tools:text="Total" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
