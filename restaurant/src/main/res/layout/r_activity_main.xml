<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.rushabh.restaurant.R_MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_item_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Restaurant"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_category_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_restaurant_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item id"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_category_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_subcategory_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_item_id">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_category_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="category"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_subcategory_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_category_id">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_subcategory_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="subcategory"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_item_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_subcategory_id">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item name"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_item_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item price"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_item_price">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item image"
                android:maxLines="1"
                android:textSize="@dimen/_15sdp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onAddItemClick"
            android:text="Add item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_item_image" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>