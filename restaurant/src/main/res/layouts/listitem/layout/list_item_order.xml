<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_order_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintBottom_toTopOf="@+id/text_order_date_time"
        app:layout_constraintEnd_toStartOf="@+id/text_order_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="email@email.com" />

    <TextView
        android:id="@+id/text_order_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@+id/text_order_itemcount"
        app:layout_constraintEnd_toStartOf="@+id/text_order_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order_email"
        tools:text="01/01/2018 at 5:40" />

    <TextView
        android:id="@+id/text_order_itemcount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_order_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order_date_time"
        tools:text="3 items" />

    <TextView
        android:id="@+id/text_order_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_order_email"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Status" />

</android.support.constraint.ConstraintLayout>